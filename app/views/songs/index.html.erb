<div class="music-app container my-5">
  <div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card mobile-rounded">
        <div class="card-body mt-5">
          <div class="row">
            <div class="col-md-12 d-flex justify-content-start mt-2 pt-1">
              <h5 class="font-weight-bold mx-3">Music</h5>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-3 d-flex justify-content-start mt-1">
              <p class="font-weight-bold active-item mx-3">Playlists</p>
              <p class="font-weight-bold text-muted mr-3">Artists</p>
              <p class="font-weight-bold text-muted">Albums</p>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mx-3">
              <ul class="list-unstyled playlists">
                <% @songs.each do |song| %>
                  <li class="media">
                    <% if song.image.attached? %>
                      <%= image_tag song.image, class: "d-flex mr-3 rounded z-depth-1" %>
                    <% end %>
                    <div class="media-body">
                      <h5 class="mt-0 mb-1 font-weight-bold"><%= song.name %></h5>
                      <p><%= song.artist %></p>
                    </div>
                    <div class="media-body">
                      <%= link_to '', song, class: "fas fa-play-circle fa-lg" %>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-3">
              <div class="d-flex justify-content-between mx-3 text-center">
                <div>
                  <%= link_to '', songs_path, class: "fas fa-home fa-lg" %>
                </div>
                <div>
                  <%= link_to '', new_song_path, class: "fas fa-plus fa-lg" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="touch-button-wrapper d-flex justify-content-center align-items-center">
          <div class="touch-button"></div>
        </div>
      </div>
    </div>
  </div>
</div>
