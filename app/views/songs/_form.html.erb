<% if song.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>
    <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="music-app container my-5">
  <div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card mobile-rounded">
        <div class="card-body p-1 mt-5">
          <div class="row">
            <div class="col-md-12 mb-4 d-flex justify-content-between mt-2">
              <%= link_to '', songs_path, class: "fas fa-angle-left fa-2x ml-2 pl-1"%>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-4 text-center">
              <h5 class="h5 font-weight-bold"><%= action_name %></h5>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-4">
              <%= form_with(model: song, local: true) do |form| %>
                <div class="form-group">
                  <%= form.label :name, class: "form-label" %>
                  <%= form.text_field :name, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= form.label :artist, class: "form-label" %>
                  <%= form.text_field :artist, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= form.label :album, class: "form-label" %>
                  <%= form.text_field :album, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= form.label :genre, class: "form-label" %>
                  <%= form.text_field :genre, class: "form-control" %>
                </div>
                <div class="md-form">
                  <div class="file-field">
                    <div class="btn btn-primary btn-sm float-left">
                      <span>Choose <%= :image %></span>
                      <%= form.file_field :image %>
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="Upload your image">
                    </div>
                  </div>
                </div>
                <div class="md-form">
                  <div class="file-field">
                    <div class="btn btn-primary btn-sm float-left">
                      <span>Choose <%= :audio %></span>
                      <%= form.file_field :audio %>
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="Upload your audio">
                    </div>
                  </div>
                </div>
                <div class="form-outline mb-4">
                  <%= form.submit class: "btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 mb-4">
              <div class="d-flex justify-content-between mx-3">
                <% if action_name == "edit" %>
                  <%= link_to '', @song, class: "fas fa-music fa-lg" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="touch-button-wrapper d-flex justify-content-center align-items-center">
          <div class="touch-button"></div>
        </div>
      </div>
    </div>
  </div>
</div>
